    "outDir": "./packages/mygamemode",                        /* Redirect output structure to the directory. */

    "strict": true                            /* Enable all strict type-checking options. */
  },
  "files": [
  		"typings.d.ts",
        "index.d.ts",
        "vehicle_hashes.d.ts",
        "weapon_hashes.d.ts",
        "ped_hashes.d.ts",
        "enums.d.ts"
    ],
  "include": [
      "src/**/*"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}